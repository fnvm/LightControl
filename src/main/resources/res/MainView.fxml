<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="200.0" prefWidth="400.0" spacing="5.0" styleClass="MainView-container" stylesheets="@MainView.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.github.fnvm.lightcontrol.view.LightControlController">
   <children>
      <HBox alignment="CENTER_LEFT" maxHeight="60.0" prefHeight="60.0" prefWidth="200.0" styleClass="label-header-hbox" stylesheets="@MainView.css" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="sliderNameLabel" styleClass="slider-name-label" stylesheets="@MainView.css" text="Brightness" />
            <Region prefHeight="200.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="valueTextField" alignment="CENTER" focusTraversable="false" prefWidth="70.0" styleClass="value-text-field" stylesheets="@MainView.css" text="1.0" />
         </children>
      </HBox>
      <Slider fx:id="brightnessSlider" max="1.5" min="0.1" prefHeight="16.0" showTickLabels="true" showTickMarks="true" value="1.0" />
      <Region prefHeight="0.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      <Label fx:id="errorLabel" style="-fx-text-fill: RED;" textFill="WHITE" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <MenuButton fx:id="monitorMenuButton" mnemonicParsing="false" text="Screens ">
               <HBox.margin>
                  <Insets />
               </HBox.margin></MenuButton>
            <CheckBox fx:id="nightModeCheckBox" mnemonicParsing="false" text="Night Mode" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="applyButton" mnemonicParsing="false" text="Apply" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
